    "@types/luxon": "^3.3.1",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.7.0",
    "csv-parse": "^5.5.0",
    "luxon": "^3.3.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.1"
  }
}
